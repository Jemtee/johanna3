{
  "name": "story-hub",
  "private": true,
  "description": "Write your own story",
  "version": "3.0.0",
  "author": "RedQ, Inc",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean:gatsby": "lerna run --parallel clean",
    "dev:beauty": "yarn workspace @blog/beauty develop",
    "build:beauty": "yarn workspace @blog/beauty build",
    "serve:beauty": "yarn workspace @blog/beauty serve"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  },
  "dependencies": {
    "gatsby-plugin-netlify-cms": "^6.5.0",
    "netlify-cms-app": "^2.15.63"
  }
}
